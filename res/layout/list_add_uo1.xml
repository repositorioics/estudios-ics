<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/label"
        style="?android:textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_fluuo1"
        android:drawableStart="@drawable/ic_fluuo1"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:textStyle="bold" />

    <ListView
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1.0"/>
    
    <View android:id="@+id/divider"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="?android:attr/dividerHorizontal" />
    
    <LinearLayout
        android:layout_width="match_parent" 
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="?android:attr/buttonBarStyle">

        <Button
                android:background="@drawable/selectable_item_background"
                android:id="@+id/add_visit_uo1_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/new_visit"
                android:drawableTop="@drawable/ic_menu_mark"
                style="?android:attr/buttonBarStyle" />

        <Button
                android:background="@drawable/selectable_item_background"
                android:id="@+id/add_symptom_uo1_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/new_sint"
                android:drawableTop="@drawable/ic_menu_invite"
                style="?android:attr/buttonBarStyle" />

        <Button
                android:background="@drawable/selectable_item_background"
                android:id="@+id/new_rojo_uo1_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/new_samp_rojo"
                android:drawableTop="@drawable/ic_rojo"
                style="?android:attr/buttonBarStyle" />

        <Button
                android:background="@drawable/selectable_item_background"
                android:id="@+id/new_pbmc_uo1_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/new_samp_pbmc"
                android:drawableTop="@drawable/ic_pbmc"
                style="?android:attr/buttonBarStyle" />

        <Button
                android:background="@drawable/selectable_item_background"
                android:id="@+id/new_MA_uo1_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/new_samp_MA"
                android:drawableTop="@drawable/ic_blood"
                style="?android:attr/buttonBarStyle" />
    </LinearLayout>
</LinearLayout>